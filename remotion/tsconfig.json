{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true, // Add this line
    "allowSyntheticDefaultImports": true // Optional, but recommended
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"],
  "files": ["index.ts"]
}
